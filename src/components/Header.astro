<header class="flex justify-around items-center py-5">
    <a href=""><img src="/logoYoutubeMusic.svg" alt="" id="header"></a>
    <div class="border border-[#484848] bg-[#292929] w-1/4 flex gap-3 py-2 px-2 rounded-md justify-center items-center" id="contentSearch">
        <i class="bi bi-search text-[#9ca3af] text-lg"></i>
        <input type="search" placeholder="Buscar canciones, álbumes, artistas y pódcast" class="text-white bg-[#292929] text-lg w-full outline-none" id="search">
    </div>
    <img src="/fotoPerfil.webp" alt="" class="w-[3%] rounded-full cursor-pointer">
</header>

<script>
    const contentSearch = document.getElementById('contentSearch');
    const search = document.getElementById('search');
    
    document.addEventListener('click', function (event) {
    if (event.target !== search) {
        contentSearch.style.backgroundColor="#292929";
        search.style.backgroundColor="#292929";
    } else {
      contentSearch.style.backgroundColor="#030303";
        search.style.backgroundColor="#030303";
    }
  });

</script>
